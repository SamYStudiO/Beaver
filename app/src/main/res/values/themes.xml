<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="29">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="29">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">false</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorSuccess">@color/green</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorOnSuccess">@android:color/white</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="colorOnBackground">@color/grey</item>
        <item name="colorOnSurface">@color/grey</item>

        <item name="android:textColorPrimary">@color/grey</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="android:textColorTertiary">@color/grey</item>
        <item name="android:textColorLink">@color/grey</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/white</item>
        <item name="android:textColorTertiaryInverse">@android:color/white</item>
        <item name="android:textColorLinkInverse">@android:color/white</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.MyApp.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MyApp.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MyApp.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MyApp.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MyApp.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MyApp.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MyApp.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MyApp.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MyApp.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MyApp.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MyApp.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MyApp.Overline</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MyApp.Caption</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent
        </item>

        <!-- Splashscreen for 26+ -->
        <item name="android:windowSplashscreenContent" tools:targetApi="o">@drawable/bg_launch
        </item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MyApp.MaterialAlertDialog</item>
    </style>

    <style name="Theme.MyApp" parent="Base.Theme.MyApp" />

    <!-- Splashscreen for pre 26 -->
    <style name="Theme.MyApp.Launcher">
        <item name="android:windowBackground">@drawable/bg_launch</item>
    </style>

    <style name="Theme.MyApp.Dialog" />

    <!-- Theme for temporary fullscreen dialog showing when MainActivity cold starts up to make some
  extra initializations -->
    <style name="Theme.MyApp.Dialog.Launcher">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
    </style>

    <style name="Theme.MyApp.Dialog.Loader">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimAmount">.5</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ThemeOverlay.MyApp.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog.Centered" />

</resources>