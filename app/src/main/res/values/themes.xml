<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="Q">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="Q">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="Q">false</item>

        <item name="android:windowBackground">@color/md_white</item>
        <item name="android:colorBackground">@color/md_white</item>

        <item name="colorPrimary">@color/md_purple_500</item>
        <item name="colorPrimaryVariant">@color/md_purple_700</item>
        <item name="colorSecondary">@color/md_teal_200</item>
        <item name="colorSecondaryVariant">@color/md_teal_700</item>
        <item name="colorSurface">@color/md_white</item>
        <item name="colorSuccess">@color/md_green_800</item>
        <item name="colorError">@color/md_red_500</item>
        <item name="colorOnPrimary">@color/md_white</item>
        <item name="colorOnSecondary">@color/md_white</item>
        <item name="colorOnSuccess">@color/md_white</item>
        <item name="colorOnError">@color/md_white</item>
        <item name="colorOnBackground">@color/md_grey_700</item>
        <item name="colorOnSurface">@color/md_grey_700</item>

        <item name="android:textColorPrimary">@color/md_grey_700</item>
        <item name="android:textColorSecondary">@color/md_grey_700</item>
        <item name="android:textColorTertiary">@color/md_grey_700</item>
        <item name="android:textColorLink">@color/md_grey_700</item>
        <item name="android:textColorPrimaryInverse">@color/md_white</item>
        <item name="android:textColorSecondaryInverse">@color/md_white</item>
        <item name="android:textColorTertiaryInverse">@color/md_white</item>
        <item name="android:textColorLinkInverse">@color/md_white</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.MyApp.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MyApp.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MyApp.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MyApp.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MyApp.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MyApp.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MyApp.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MyApp.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MyApp.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MyApp.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MyApp.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MyApp.Overline</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MyApp.Caption</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent
        </item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MyApp.MaterialAlertDialog</item>
    </style>

    <style name="Theme.MyApp" parent="Base.Theme.MyApp" />

    <style name="Theme.MyApp.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.MyApp</item>
    </style>

    <style name="Theme.MyApp.Dialog" />

    <style name="Theme.MyApp.Dialog.Loader">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimAmount">.5</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ThemeOverlay.MyApp.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog.Centered" />

</resources>